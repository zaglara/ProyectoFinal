<?xml version="1.0" encoding="UTF-8"?>

<FrameLayout
    android:background="@color/mercury"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/idFrameLayout_ownpetCard"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.cardview.widget.CardView
        android:background="@color/cyan"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:contentPadding="2dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="1dp"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@color/gray">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <TextView
                android:layout_height="23dp"
                android:layout_width="48dp"
                android:id="@+id/lblEdadlbl_ownpetCard"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/lblDescripcion_ownpetCard"
                app:layout_constraintStart_toEndOf="@+id/imgPic_ownpetCard"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/edad__"
                android:layout_marginStart="5dp"/>

            <ImageView
                android:layout_height="110dp"
                android:layout_width="110dp"
                android:id="@+id/imgPic_ownpetCard"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="4dp"
                app:srcCompat="@drawable/img_item_card_placeholder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/default_info_placeholder"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/lblEspecie_ownpetCard"
                app:layout_constraintStart_toEndOf="@+id/imgPic_ownpetCard"
                android:textSize="20sp"
                android:textColor="@color/cyan"
                android:text="@string/especie_card"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_height="65dp"
                android:layout_width="275dp"
                android:id="@+id/lblDescripcion_ownpetCard"
                app:layout_constraintTop_toBottomOf="@+id/lblEspecie_ownpetCard"
                app:layout_constraintStart_toEndOf="@+id/imgPic_ownpetCard"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/descripci_n_del_animal_card"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_height="23dp"
                android:layout_width="wrap_content"
                android:id="@+id/lblEdad_ownpetCard"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/lblDescripcion_ownpetCard"
                app:layout_constraintStart_toEndOf="@+id/lblEdadlbl_ownpetCard"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="18sp"
                android:textColor="@color/cyan"
                android:text="@string/edad_card"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/custom_button_circle"
                android:layout_height="30dp"
                android:layout_width="110dp"
                android:id="@+id/btnEditar_ownpetCard"
                app:layout_constraintTop_toBottomOf="@+id/lblEdad_ownpetCard"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="12sp"
                android:text="@string/editar_btn"
                app:layout_constraintStart_toStartOf="@+id/lblEdadlbl_ownpetCard"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:drawableStartCompat="@drawable/ic_edit"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/custom_button_circle"
                android:layout_height="30dp"
                android:layout_width="110dp"
                android:id="@+id/btnEliminar_ownpetCard"
                app:layout_constraintTop_toBottomOf="@+id/lblEdad_ownpetCard"
                app:layout_constraintStart_toEndOf="@+id/btnEditar_ownpetCard"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="12sp"
                android:text="@string/eliminar_btn"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:drawableStartCompat="@drawable/ic_delete"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>